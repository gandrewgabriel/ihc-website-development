{% set navPages = collections.all | eleventyNavigation %}
<footer class="bg-white dark:bg-colour-dark m-4">
    <div class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between">
      <span class="text-sm text-gray-500 sm:text-center dark:text-colour-lighter">Copyright Â© {{eleventyComputed.currentYear}} <a href="/" class="hover:underline">Immersive Healthcare Collaboration</a>
    </span>
    <ul class="flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 dark:text-colour-lighter sm:mt-0">
      {% for entry in navPages %}
        <li>
          {% if entry.url != "/" %}
          <a {% if page.url != entry.url %} href="{{ entry.url | url }}"{% endif %} 
             {% if page.url == entry.url %} class="select-none block underline me-4 md:me-6" aria-current="page" {% endif %}
             {% if page.url != entry.url %} class="select-none block hover:underline me-4 md:me-6"{% endif %}>{{ entry.title }}</a>
          {%endif%}
        </li>
        {% endfor %}

    </ul>
    </div>
</footer>

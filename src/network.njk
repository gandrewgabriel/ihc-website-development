              <img class="mx-auto mb-4 w-36 h-36 rounded-full" src="{{ person.image }}" alt="{{ person.name }} Avatar">
              <h3 class="mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                  <a href="/people/{{person.slug}}">{{ person.name }}</a>
              </h3>
              <p>{{ person.jobTitle }}</p>
              <a href="{{ person.companyWebsites[0] }}" class="text-[#39569c] hover:text-gray-900 dark:hover:text-white">{{ person.companies[0] }}</a>
              <ul class="flex justify-center mt-4 space-x-4">

                  {# Twitter / X #}
                  {% if person.twitter != "" %}
                  <li>
                      <a href="{{person.twitter}}" class="text-[#00acee] hover:text-gray-900 dark:hover:text-white">
